/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "skipLibCheck": true,
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@config/*": [
        "app/config/*"
      ],
      "@environments/*": [
        "environments/*"
      ],
      "@helpers/*": [
        "app/helpers/*"
      ],
      "@services/*": [
        "app/services/*"
      ],
      "@wallet/*": [
        "app/wallet/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@auth/*": [
        "app/auth/*"
      ],
      "@faq/*": [
        "app/faq/*"
      ],
      "@campaigns/*": [
        "app/campaigns/*"
      ],
      "@social-accounts/*": [
        "app/social-accounts/*"
      ],
      "@user-settings/*": [
        "app/user-settings/*"
      ],
      "jszip": [
        "./node_modules/jszip/dist/jszip.min.js"
      ]
    },
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "diagnostics": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "useDefineForClassFields": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "path/to/unused-file.ts",
    // Add more patterns for unused files
  ],
  "include": [
    "src/**/*.ts",  // Include your project files
    "node_modules/web3-types/src/used-file.ts",
    // Add more paths for necessary files
  ],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "enableIvy": false ,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,

  }


}
